
<!-- Profile page -->
<div class="jumbotron">
    <h1>My Profile</h1>
    <h2>Welcome <%=current_user.email%></h2>
    <h2></h2>
    <p>Showcase your work!</p>
</div>








<div class="row">
    <div class="col-lg-6">
        <img class="profileImage img-circle img-responsive center" src="<%=current_user.avatar%>">

        <form class="new_portfolio" id="new_portfolio" enctype="multipart/form-data" action="/profile" accept-charset="UTF-8" method="post">
            <input type="file" class="btn btn-primary" name="profile[avatar]" id="portfolio_image_url">

            <button class="btn btn-primary">Add Profile Image</button>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

        </form>
    </div>
</div>


<!-- Portfolio button -->
<button><%= link_to '<span class="glyphicon glyphicon-user"></span> New Portfolio'.html_safe, new_portfolio_path %></button>
</div>