<body>

<div class="wrapper">
<div class="jumbotron">
	<h1>Forgot your Password?</h1>
	<h2>We will email you it!</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= devise_error_messages! %>

<div class="border-form-div">
	<%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>


	<%= f.submit "Reset password",:class=>'btn btn-success' %>
	<% end %>

	<%= render "devise/shared/links" %>
</div>


<div id="footer">
	<div class="social">

		<img src="/logo3.png" class="img" alt="Responsive image">

		<ul>
			<li class="facebook"></li>
			<li class="twitter"></li>
			<a href="https://ca.linkedin.com/in/jonathankrista"><li class="fa-linkedin"></li>
				<a href="https://github.com/Jonathankrista"><li class="fa-github"></li>
				</ul>
			</div>
		</div>


		</html>
	</div>
</body>

